<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.guo_m_000.climate.PopUpActivity">

    <TextView
        android:id="@+id/prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:textSize="20dp"
        android:text="@string/prompt"
        android:fontFamily="bold"/>

    <EditText
        android:id="@+id/phone_number"
        android:hint="Phone number"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/prompt" />

    <TextView
        android:id="@+id/contact_popup"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:text="@string/donation"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number"
        android:fontFamily="bold"/>

    <EditText
        android:id="@+id/donation_input"
        android:layout_width="wrap_content"
        android:hint="What do you have?"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact_popup"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:text="Select a Field"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/donation_input"
        android:fontFamily="bold"
        android:id="@+id/textView2" />


    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2" />


</RelativeLayout>

